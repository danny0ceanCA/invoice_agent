# Enable Redis-backed Celery queues for local automation
REDIS_ENABLED=true
# Point Celery at the local Redis instance (database 0 for broker, 1 for results)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Store generated invoices on the local filesystem during development
AWS_S3_BUCKET=local
LOCAL_STORAGE_PATH=/tmp/invoice-agent

